#!/usr/bin/make -f

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/autotools.mk
include /usr/share/cdbs/1/rules/patchsys-quilt.mk

install/codelite::
	find $(CURDIR)/debian/codelite/usr/share -type f -exec chmod 0644 '{}' \;
	install -D -m644 $(CURDIR)/debian/codelite.xpm \
	                 $(CURDIR)/debian/codelite/usr/share/pixmaps/codelite.xpm
clean::
	find $(CURDIR) -name Makefile ! -wholename '*sdk*' -delete
	rm -f $(CURDIR)/fakeroot/DEBIAN/control
